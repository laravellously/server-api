  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@faker-js/faker": "^10.0.0",
    "@mikro-orm/cli": "^6.5.7",
    "@mikro-orm/entity-generator": "^6.5.7",
    "@mikro-orm/migrations": "^6.5.7",
