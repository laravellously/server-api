{
  "name": "bluupay-server",
  "version": "0.0.1",
  "description": "BluuPay API Server",
  "author": "@bluupay_dev",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "email": "email dev --dir ./src/core/mail/templates -p 4321",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "core:build": "NODE_ENV=production bun run scripts/build.ts",
    "core:dev": "NODE_ENV=development bun --watch ./src/main.ts",
    "core:debug": "NODE_ENV=development tsc-watch --onSuccess \"bun . --inspect\"",
    "core:prod": "NODE_ENV=production bun --bun out/main.js",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@bluupayhq/pouchii-sdk": "^1.0.25",
    "@keyv/compress-gzip": "^2.0.3",
    "@keyv/redis": "^5.1.3",
    "@keyv/sqlite": "^4.0.6",
    "@mikro-orm/core": "^6.5.7",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.7",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@react-email/components": "0.5.6",
    "@scalar/nestjs-api-reference": "^1.0.4",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "@thallesp/nestjs-better-auth": "^2.0.1",
    "@types/bun": "^1.3.0",
    "ajv": "^8.17.1",
    "axios": "^1.12.2",
    "better-auth": "^1.3.27",
    "cache-manager": "^7.2.4",
    "class-transformer": "^0.5.1",
